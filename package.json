{
  "name": "projeto-ong",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run minify-css && npm run minify-js && npm run optimize-images",
    "minify-css": "cleancss -o dist/css/style.min.css css/style.css",
    "minify-js": "uglifyjs js/script.js -o dist/js/script.min.js",
    "optimize-images": "imagemin images/* --out-dir=dist/images"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "imagemin-cli": "^7.0.0",
    "uglify-js": "^3.17.4"
  }
}